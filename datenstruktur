create database `semagr` default character set utf8 collate utf8_general_ci;

create table studienrichtung(
 
 	title varchar(64) primary key
);

create table studienzweig (

	title varchar(64) primary key
);
	
create table studienfach(
 
 	title varchar(64) primary key
);

create table kurs(
 
 	id int(8) primary key,
 	title varchar(128),
 	sst int(2),
 	language varchar(32) 
);

create table studienplanpunkt(

	title varchar(128) primary key
);

create table lvleiter(
 
 	id int(8) primary key,
 	name varchar(128)
);

create table uni(
 
 	title varchar(64) primary key
);

create table termine(
 
 	id int(8) primary key,
 	weekday varchar(4),
 	start datetime,
 	end datetime,
 	place varchar(128)
);

create table studienplanpunkt_kurs(

	kurs_id int(8),
	foreign key(kurs_id) references kurs(id),
	studienplanpunkt_title varchar(128),
	foreign key(studienplanpunkt_title) references studienplanpunkt(title)
);

create table studienplanpunkt_studienfach(

	studienplanpunkt_title varchar(128),
	foreign key(studienplanpunkt_title) references studienplanpunkt(title),
	studienfach_title varchar(64),
	foreign key(studienfach_title) references studienfach(title)
);

create table kurs_termine(

	kurs_id int(8),
	foreign key(kurs_id) references kurs(id),
	termine_id int(8),
	foreign key(termine_id) references termine(id)

);

create table uni_studienrichtung(

	uni_title varchar(64),
	foreign key (uni_title) references uni(title),
	studienrichtung_title varchar(64),
	foreign key (studienrichtung_title) references studienrichtung(title)
);

create table lvleiter_kurs(

	lvleiter_id int(8),
	foreign key (lvleiter_id) references lvleiter(id),
	kurs_id int(8),
	foreign key (kurs_id) references kurs(id)
);

create table studienfach_studienzweig(

	studienfach_title varchar(64),
	foreign key (studienfach_title) references studienfach(title),
	studienzweig_title varchar(64),
	foreign key (studienzweig_title) references studienzweig(title)
);

create table studienrichtung_studienzweig(

	studienrichtung_title varchar(64),
	foreign key (studienrichtung_title) references studienrichtung(title),
	studienzweig_title varchar(64),
	foreign key (studienzweig_title) references studienzweig(title)
);